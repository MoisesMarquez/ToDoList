<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

  <!--Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">

  <title>Hello, world!</title>
</head>
<body>
  <div class="container">
    <h1 class="text-center">To do List</h1>
    <div class="row">
      <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text">Agrega Tareas</span>
        </div>
        <input id="task" type="text" name="task" class="form-control col-xl-8"></input>
        <div class="input-group-append">
          <button id="btn-save" type="button"
            class="btn btn-primary" aria-describedby="button-addon2">
            <i class="fas fa-save"></i> Save
          </button>
        </div>
      </div>
    </div>

    <div>
      <h2>Lista</h2>
    </div>

      <div class="col-md-12">
        <table class="table" id="tableTasks"><thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">To Do</th>
            <th scope="col">Options</th>
          </tr>
          </thead>
          <tbody id="tableTasksBody">
          </tbody>
        </table>
      </div>
    </div>
  </div> 
<!-- JavaScript -->
<!-- jQuery,Popper.js,Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

<script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
<script type="text/javascript">

  getTasks();

  $('#btn-save').click(function(){

    var task = $('#task');
    $.ajax({
      url: '/tasks',
      type: 'POST',
      data: {task:task.val()},
      success: function(data){

        getTasks();
        task.val('');
      }});
  });

  function getTasks() {

    $.ajax({
      url: '/tasks',
      type: 'GET',
      success: function(data){

        if(data.length > 0){
          fillTable(data);
        }
      }
    });
  }

  function fillTable(tasks){

    var sizeTasks=tasks.length;
    $('#tableTasksBody').html('');
    for(var i=0;i<sizeTasks;i++){

      if(tasks[i] != null){
        var btnDelete = "<button id='btnDelete"+(tasks[i].id)+"' type='button' class='btn btn-primary'><i class='fas fa-trash-alt'></i> Delete</button>";
        var btnDone = "<button id='btnDone"+(tasks[i].id)+"' type='button' class='btn btn-primary'><i class='fa fa-check'></i> Done</button>";
        var idrow = 'row'+tasks[i].id;
        var newRow="<tr id="+idrow+" ><th class='inner' scope='row'>"+(i+1)+"</th>"+"<td class='inner'>"+tasks[i].description+"</td><td class='inner' >"+btnDelete+" "+btnDone+"</td></tr>";
        $("#tableTasks").append(newRow);

        if(tasks[i].done == 1){
          $("#"+idrow).addClass('table-success');
          var button = $('#btnDone'+tasks[i].id);
          button.addClass('invisible');
        }

        $('#btnDelete'+tasks[i].id).click(function(){
          var idTask = $(this).attr('id');
          var index = idTask.substring(9,idTask.length);

          $.ajax({
            url: '/tasks/'+index,
            type: 'DELETE',
            success: function(data){

              getTasks();
            }
          });
        });

        $('#btnDone'+tasks[i].id).click(function(){
          var idTask = $(this).attr('id');
          var index = idTask.substring(7,idTask.length);

          $.ajax({
            url: '/tasks/'+index,
            type: 'PUT',
            success: function(data){

              getTasks();
            }
          });
        });
      }
    } 

  };


</script>
</body>
</html>